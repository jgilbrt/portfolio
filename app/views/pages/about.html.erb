<div class="container mt-4 py-4 px-3" style="max-width: 900px;">

  <div class="position-relative text-center d-flex flex-column align-items-center justify-content-start mb-5 overflow-hidden rounded-4" style="min-height: 400px;">
    <img src="https://img.itch.zone/aW1hZ2UvMTUxODgwMi84ODU3OTM2LmdpZg==/original/JxtoBT.gif"
         alt="Background animation"
         class="position-absolute w-100 h-100 rounded-bottom-4 rounded-top-0" style="object-fit: cover; z-index: 0; top: 0; left: 0;">

    <%= image_tag "memoji.png",
      class: "rounded-circle shadow bg-light position-relative mb-3 fade-in-up delay-1",
      style: "width: 120px; height: 120px; object-fit: cover; margin-top: 100px; z-index: 2;"%>

    <div class="text-white px-4 py-3 w-100 position-absolute bottom-0 start-0 rounded-bottom-4 fade-in-up delay-2" style="z-index: 1; background-color: rgba(0, 0, 0, 0.6);">
      <h1 id="typewriter" class="mb-2 fw-bold" style="font-size: 2.5rem; letter-spacing: -1px;"></h1>
      <p class="lead" style="font-size: 1.25rem;">
        Designer-developer focused on creative code and clear user journeys
      </p>
    </div>
  </div>

  <section class="mb-5 fade-in-up delay-3">
    <div class="card p-4 rounded-4 shadow-sm text-center">
      <h2 class="mb-3 fw-bold text-dark">[ ABOUT ME ]</h2>
      <p>
        I'm a junior UX designer passionate about building tools that feel thoughtful, simple, and fast.
        I transitioned into tech after starting out in accounts at a marketing agency. Through a couple of intense bootcamps,
        I found my way into design and development, and haven't looked back since.
      </p>
      <p> I’m looking to grow in a team that gives me the tools I need to learn, improve, and build cool stuff along the way. I love simplifying complex problems and believe the best solutions come from finding the balance between listening to the user and thinking a bit differently. </p>
    </div>
  </section>

  <section class="mb-5 fade-in-up delay-4">
    <div class="card p-4 rounded-4 shadow-sm">
      <h2 class="mb-4 fw-bold text-center text-dark" style="color: #2a3142;">[ MY JOURNEY ]</h2>
      <div class="row g-4 justify-content-center">
        <div class="col-md-6">
          <div class="card p-4 rounded-4 shadow-sm h-100 text-center">
            <img src="https://www.lewagon.com/assets/lewagon-logo-square-ffe99941106de6d01c248f59bd1c999ad4f5f3da6e8922272c94764a3d2484cc.svg" alt="Le Wagon" class="mb-2 mx-auto" style="height: 50px;" />
            <h5 class="fw-bold mb-1" style="color: #2a3142;">Le Wagon</h5>
            <p class="text-muted small mb-1">Web Development Bootcamp</p>
            <p>
              Learned full-stack development with Ruby on Rails, built real apps from scratch, and gained confidence in Git, databases, and writing clean, maintainable code.
            </p>
          </div>
        </div>
        <div class="col-md-6">
          <div class="card p-4 rounded-4 shadow-sm h-100 text-center">
            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQSDODY_3qHSGFpESsq3GJtCi9aZRt50nrokA&s" alt="General Assembly" class="mb-2 mx-auto" style="height: 50px;" />
            <h5 class="fw-bold mb-1" style="color: #2a3142;">General Assembly</h5>
            <p class="text-muted small mb-1">UX Design Bootcamp</p>
            <p>
              Developed a strong UX foundation — from user research and journey mapping to wireframing and prototyping. Embraced user-first thinking and iterative design.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section id="stack" class="mb-5 fade-in-up delay-5">
    <div class="card p-4 rounded-4 shadow-sm text-center">
      <h2 class="mb-4 fw-bold text-dark" style="color: #2a3142;">[ Tech Stack ]</h2>
      <div class="d-flex flex-wrap justify-content-center gap-4">
        <% stack_items = [
          { name: "Figma", src: "https://cdn3d.iconscout.com/3d/premium/thumb/figma-3d-icon-download-in-png-blend-fbx-gltf-file-formats--logo-call-speaker-cubes-graphic-design-pack-tools-icons-8973594.png" },
          { name: "JavaScript", src: "https://cdn3d.iconscout.com/3d/free/thumb/free-javascript-3d-icon-download-in-png-blend-fbx-gltf-file-formats--html-logo-vue-angular-coding-lang-pack-logos-icons-7577991.png" },
          { name: "Ruby", src: "https://cdn3d.iconscout.com/3d/free/thumb/free-ruby-3d-icon-download-in-png-blend-fbx-gltf-file-formats--programming-language-high-level-interpreted-logo-coding-lang-pack-logos-icons-7578016.png" },
          { name: "CSS", src: "https://cdn3d.iconscout.com/3d/free/thumb/free-css-3d-icon-download-in-png-blend-fbx-gltf-file-formats--html-logo-css3-html5-cascading-style-sheets-coding-lang-pack-logos-icons-7578024.png" },
          { name: "HTML", src: "https://cdn3d.iconscout.com/3d/premium/thumb/html5-logo-3d-icon-download-in-png-blend-fbx-gltf-file-formats--html-standards-responsive-semantic-multimedia-pack-design-development-icons-10471870.png" }
        ] %>

        <% stack_items.each do |item| %>
          <div class="d-flex flex-column align-items-center">
            <img src="<%= item[:src] %>" alt="<%= item[:name] %>"
                 class="mb-2" style="width: 90px; height: 90px;">
            <span class="badge bg-dark text-white rounded px-3 py-2 font-monospace">
              <%= item[:name] %>
            </span>
          </div>
        <% end %>
      </div>
    </div>
  </section>

  <div class="text-center mb-4 mt-4 fade-in-up delay-6">
    <%= link_to projects_path, class: "btn btn-outline-secondary btn-lg fw-bold text-uppercase px-4 py-3 rounded-3 border-3", style: "font-size: 1.2rem;" do %>
      Go to my Projects
    <% end %>
  </div>

</div>

<style>
  .fade-in-up {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.6s ease, transform 0.6s ease;
  }

  .fade-in-up.show {
    opacity: 1;
    transform: translateY(0);
  }

  .delay-1 { transition-delay: 0.1s; }
  .delay-2 { transition-delay: 0.2s; }
  .delay-3 { transition-delay: 0.3s; }
  .delay-4 { transition-delay: 0.4s; }
  .delay-5 { transition-delay: 0.5s; }
  .delay-6 { transition-delay: 0.6s; }

  @media (max-width: 600px) {
    h1#typewriter {
      font-size: 1.7rem !important;
    }
  }
</style>

<script>
  let typingTimeout;

  function startTypewriter() {
    const text = "Hi I'm Jordan";
    const target = document.getElementById("typewriter");
    if (!target) return;

    target.innerHTML = "";
    let i = 0;

    function type() {
      if (i < text.length) {
        target.innerHTML += text.charAt(i);
        i++;
        typingTimeout = setTimeout(type, 80);
      }
    }
    type();
  }

  function initFadeInObserver() {
    const observer = new IntersectionObserver(entries => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('show');
        }
      });
    }, { threshold: 0.1 });

    document.querySelectorAll('.fade-in-up').forEach(el => observer.observe(el));
  }

  document.addEventListener("turbo:load", () => {
    startTypewriter();
    initFadeInObserver();
  });

  document.addEventListener("turbo:before-cache", () => {
    clearTimeout(typingTimeout);
    const target = document.getElementById("typewriter");
    if (target) target.innerHTML = "";
  });
</script>
