<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css2?family=Source+Code+Pro&display=swap" rel="stylesheet" />

<div id="music-player" data-turbo-permanent class="d-none position-fixed mb-4 bottom-0 start-50 translate-middle-x bg-dark border border-secondary shadow p-3 rounded-pill d-flex align-items-center gap-3" style="z-index: 1050; max-width: 600px; width: 100%; font-family: 'Source Code Pro', monospace; color: #ccc;">
  <button id="player-close" class="btn btn-outline-light rounded-circle d-flex align-items-center justify-content-center" style="width: 30px; height: 30px; font-weight: 600;">Ã—</button>

  <img src="https://f4.bcbits.com/img/a0562909248_16.jpg" alt="Album Art" class="rounded-circle border border-secondary" style="width: 50px; height: 50px; object-fit: cover;">

  <div class="text-truncate" style="min-width: 0;">
    <strong class="d-block text-light text-truncate" style="font-size: 1rem;">Final Credits</strong>
    <small class="text-light text-truncate" style="font-size: 0.85rem;">Midland</small>
  </div>

  <button id="play-pause" class="btn btn-outline-light rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px; font-size: 1.3rem; color: #ccc;">
    <i class="bi bi-play-fill"></i>
  </button>

  <div class="flex-grow-1 me-3" style="min-width: 110px;">
    <div class="progress rounded-pill" style="height: 6px; background: #444;">
      <div id="progress-bar" class="progress-bar bg-info" style="width: 0%;"></div>
    </div>
    <div class="d-flex justify-content-between mt-1" style="font-size: 0.75rem;">
      <span id="current-time">0:00</span>
      <span id="duration">0:00</span>
    </div>
  </div>

  <input id="volume-slider" type="range" min="0" max="1" step="0.01" value="0.5" title="Volume" style="width: 100px; cursor: pointer; accent-color: #17a2b8;">

  <audio id="audio-player" class="d-none">
    <source src="<%= asset_path('song.mp3') %>" type="audio/mpeg" />
    Your browser does not support the audio element.
  </audio>
</div>

<button id="reopen-music-player" class="btn btn-info rounded-circle position-fixed shadow" style="bottom: 20px; left: 20px; width: 50px; height: 50px; z-index: 1050; font-family: 'Source Code Pro', monospace;">
  <i class="bi bi-music-note-beamed fs-4"></i>
</button>
